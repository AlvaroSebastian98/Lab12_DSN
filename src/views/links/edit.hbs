<div class="col-md-4 mx-auto">

    <div class="card">
        <div class="card-body">
            <form action="/links/edit/{{link.id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="nombre" class="form-control" placeholder="Title" value="{{link.nombre}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="precio" class="form-control" placeholder="URL" value="{{link.precio}}">
                </div>
                <div class="form-group">
                    <input type="text" name="categoria" class="form-control" placeholder="URL" value="{{link.categoria}}">
                </div>
                <div class="form-group">
                    <textarea name="descripcion" rows="2" class="form-control" placeholder="Description">{{link.descripcion}}</textarea>
                </div>
                {{!-- <div class="form-group">
                    <input type="text" name="imagen" class="form-control" placeholder="url imagen" value="{{link.imagen}}">
                </div>                 --}}
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>