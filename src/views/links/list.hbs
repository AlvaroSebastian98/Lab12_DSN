<div class="container p-4">
    <div class="row">
        {{#each links}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    {{!-- <img class="card-img-top"src="{{imagen}}" style="width: 170px; height: 160px;" alt=""> --}}
                    <a href="{{url}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{nombre}} {{apellidos}}
                        </h3>
                    </a>
                    <p class="m-2">Número: {{numero}}</p>
                    <p class="m-2">Correo: {{correo}}</p>
                    <p class="m-2">Fecha de creación: {{fecha_nac}}</p>
                    <a class="btn btn-danger" href="/links/delete/{{id}}">
                        Eliminar contacto
                    </a>
                    <a class="btn btn-secondary" href="/links/edit/{{id}}">
                        Editar
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay contactos agregados aún.</p>
                <a href="/links/add">Agregar</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>